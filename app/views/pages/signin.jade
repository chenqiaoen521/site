extends ../signin
block content
    .container
        .row
            .col-md-5
                form(method="POST",action="/user/signin")
                    .modal-header.text-success 登录
                        .modal-body
                            .form-group
                                label(for="signinName") 用户名
                                input#signinName.form-control(name="user[name]",type="text")
                            .form-group
                                label(for="signinPassword") 密码
                                input#signinPassword.form-control(name="user[password]",type="password")
                            .modal-footer
                                button.btn.btn-primary(type="button",data-toggle="modal",data-target="#signupModal") 注册
                                button.btn.btn-primary(type="submit") 登录
            if(message)
                .col-md-7
                    h2
                        p(class="label label-info") #{message}

