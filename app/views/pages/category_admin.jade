extends ../layout
block content
    .container
        .row
            form#updateform.form-horizontal(method="post",action="/admin/category")
                .form-group
                    label.col-sm-3.control-label(for="inputCategory")电影分类
                    .col-sm-9
                        input#inputCategory.form-control(type="text",name="category[name]",value=category.name)
                .form-group
                    .col-sm-offset-2.col-sm-9
                    if category._id
                        input(type="hidden",name="category[_id]",value=category._id)
                        button.btn.btn-warning(type="submit")修改
                    else
                        button.btn.btn-default(type="submit")录入
    script(src="/js/category.js")                
